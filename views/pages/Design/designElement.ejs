<% include ../../partials/Design/Design %>
<% include ../../partials/User/UserProfile.ejs %>
<div class="form-horizontal">
	<div class="form-group">
		<label for="elements" class="col-sm-2">Select the Element:</label>
		<div class="col-sm-4">
			<select class="form-control" ng-model="selectedElem" ng-options="elem as elem.name for elem in htmlElements" ng-change="createElement(selectedElem)">
				<option style="display:none" value="">--select--</option>
			</select>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-6 pull-left">
		<div class="design-element-container element-wrapper col-lg-12">
			
		</div>
		<div class="design-element-container applied-style-wrapper col-lg-12" style="overflow:hidden;padding:15px 0px;">
			<div class="col-lg-12 text-info text-center" style="height:10%;line-height:10%;">
				<span>Applied styles</span>
			</div>
			<div class="col-lg-12" style="height:90%;overflow-y:auto;padding:0px;">
				<div  applied-style ng-repeat="(key,value) in curElemAppliedStyles">
					<!--<span applied-style></span>-->
				</div>
			</div>
		</div>
	</div>
	<div class="col-lg-6 pull-left">
		<div class="form-horizontal design-element-container add-style-wrapper col-lg-12 pull-left" ng-hide="showHelper">
			<ul class="nav nav-tabs" style="margin-bottom:10px;">
				<li class="active"><a data-toggle="tab" href="" data-target="#applyStyles">Apply Styles</a></li>
				<li><a data-toggle="tab" href="" data-target="#changeAttrs">Attributes</a></li>
			</ul>
			<div class="tab-content">
				<div id="applyStyles" class="tab-pane fade in active">
					<div class="form-group">
						<label class="control-label col-sm-5">Filter style : </label>
						<div class="col-sm-6">
							<input type="text" class="form-control" ng-model="filterStyle.name"></input>
						</div>
					</div>
					<!--<span class="help-block" style="margin-top: -10px">Select checkbox to open helper in applying styles :</span>-->
					<div style="overflow-y:scroll;overflow-x:hidden;height:285px;padding-left: 10px;">
						<div style-add ng-repeat="style in cssProps | filter:filterStyle">
							<!--<span style-add></span>-->
						</div>
					</div>
				</div>
				<div id="changeAttrs" class="tab-pane fade">
					testing
				</div>
			</div>
		</div>
		<div class="design-element-container style-helper-popover" ng-hide="!showHelper">
			<div colorpicker="rgba" colorpicker-size="200" colorpicker-with-input="true" colorpicker-inline="true" colorpicker-parent="true" type="text" ng-model="color"></div>
			<rzslider rz-slider-model="verticalSlider.value" rz-slider-options="verticalSlider.options"></rzslider>
			<button class="btn btn-primary pull-right" ng-click="showHelper = !showHelper">Done</button>
		</div>
	</div>
</div>					
